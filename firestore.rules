rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isUidOwner(targetUid) {
      return request.auth != null && request.auth.uid == targetUid;
    }

    function isReservationStatus(value) {
      return value == 'pending' ||
        value == 'accepted' ||
        value == 'paid' ||
        value == 'cancelled';
    }

    match /users/{userId} {
      allow create: if isUidOwner(userId) &&
        request.resource.data.email == request.auth.token.email &&
        request.resource.data.authUid == userId &&
        request.resource.data.role in ['passenger', 'driver'];
      allow read: if isUidOwner(userId) ||
        (
          isSignedIn() &&
          request.auth.token.email != null &&
          resource.data.email == request.auth.token.email
        );
      allow update, delete: if isUidOwner(userId);
    }

    function isRideOwner() {
      return isSignedIn() && (
        (resource != null && resource.data.ownerEmail != null && resource.data.ownerEmail == request.auth.token.email) ||
        (request.resource != null && request.resource.data.ownerEmail == request.auth.token.email)
      );
    }

    match /rides/{driverUid}/published/{rideId} {
      allow read, write: if request.auth != null && request.auth.uid == driverUid;
      match /requests/{requestId} {
        allow read, write: if request.auth != null && request.auth.uid == driverUid;
      }
    }

    match /wallets/{uid} {
      allow read: if isUidOwner(uid);
      allow create, update: if isUidOwner(uid);
      match /transactions/{txId} {
        allow read: if isUidOwner(uid);
        allow create: if isUidOwner(uid);
        allow update, delete: if false;
      }
    }

    function isValidPlatform(value) {
      return value == null || value in ['ios', 'android', 'web'];
    }

    function isBusinessQuoteKeyset() {
      return request.resource.data.keys().hasOnly([
        'quoteId',
        'createdAt',
        'updatedAt',
        'status',
        'source',
        'appVersion',
        'platform',
        'createdByUid',
        'createdByEmail',
        'roleAtSubmit',
        'companyName',
        'contactName',
        'email',
        'phone',
        'website',
        'formatWanted',
        'budgetMonthly',
        'messageObjectives',
        'originRoute',
        'clientTimestamp',
      ]);
    }

    function isValidRole(value) {
      return value == null || value in ['passenger', 'driver'];
    }

    function isBusinessQuotePayload() {
      return request.auth != null &&
        request.auth.token.email != null &&
        request.resource.data.companyName is string &&
        request.resource.data.contactName is string &&
        request.resource.data.email is string &&
        request.resource.data.formatWanted is string &&
        request.resource.data.budgetMonthly is string &&
        request.resource.data.messageObjectives is string &&
        request.resource.data.status == 'new' &&
        request.resource.data.source == 'business-quote' &&
        request.resource.data.originRoute == '/business-quote' &&
        request.resource.data.clientTimestamp is number &&
        request.resource.data.quoteId == request.auth.uid &&
        request.resource.data.createdByUid == request.auth.uid &&
        request.resource.data.createdByEmail == request.auth.token.email &&
        (request.resource.data.phone == null || request.resource.data.phone is string) &&
        (request.resource.data.website == null || request.resource.data.website is string) &&
        (request.resource.data.appVersion == null || request.resource.data.appVersion is string) &&
        isValidPlatform(request.resource.data.platform) &&
        isValidRole(request.resource.data.roleAtSubmit) &&
        isBusinessQuoteKeyset();
    }

    match /businessQuotes/{quoteId} {
      allow create: if isBusinessQuotePayload() && isUidOwner(quoteId);
      allow read, update, delete: if isUidOwner(quoteId);
    }

    match /users/{uid}/rideRequests/{requestId} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    match /users/{uid}/reservations/{reservationId} {
      function isIndexOwner() {
        return request.auth != null && request.auth.uid == uid;
      }

      function isDriverOwner() {
        return request.auth != null && resource != null &&
          resource.data.driverUid == request.auth.uid;
      }

      function isValidIndexPayload() {
        return request.resource.data.reservationId == reservationId &&
          request.resource.data.driverUid is string &&
          request.resource.data.driverUid != '' &&
          request.resource.data.rideId is string &&
          request.resource.data.rideId != '' &&
          request.resource.data.status is string &&
          isReservationStatus(request.resource.data.status) &&
          request.resource.data.createdAt is timestamp &&
          request.resource.data.updatedAt is timestamp;
      }

      function canUpdateReservationIndex() {
        if (resource == null) {
          return false;
        }
        let diff = request.resource.data.diff(resource.data);
        return request.resource.data.reservationId == resource.data.reservationId &&
          request.resource.data.driverUid == resource.data.driverUid &&
          request.resource.data.rideId == resource.data.rideId &&
          request.resource.data.createdAt == resource.data.createdAt &&
          isReservationStatus(request.resource.data.status) &&
          request.resource.data.updatedAt is timestamp &&
          diff.addedKeys().size() == 0 &&
          diff.removedKeys().size() == 0 &&
          diff.changedKeys().hasOnly(['status', 'updatedAt']);
      }

      allow read: if isIndexOwner();
      allow create: if isIndexOwner() && isValidIndexPayload();
      allow update: if (isIndexOwner() || isDriverOwner()) && canUpdateReservationIndex();
    }

    match /trajets/{trajetId} {
      function isTripOwner() {
        return isSignedIn() && (
          (resource != null && resource.data.ownerUid == request.auth.uid) ||
          (request.resource != null && request.resource.data.ownerUid == request.auth.uid)
        );
      }

      function canManageUserJournal() {
        return isSignedIn() && request.auth.uid == trajetId;
      }

      function existingReservations() {
        return resource.data.reservations ?? {};
      }

      function isReservationOnlyDiff() {
        let diff = request.resource.data.diff(resource.data);
        return diff.addedKeys().size() == 0 &&
          diff.removedKeys().size() == 0 &&
          diff.changedKeys().hasOnly(['reservations', 'updatedAt']);
      }

      function isReservationEntry(entry, key) {
        return entry is map &&
          entry.reservationId == key &&
          entry.rideId is string &&
          entry.driverUid == trajetId &&
          entry.passengerUid is string &&
          (entry.passengerEmail == null || entry.passengerEmail is string) &&
          entry.seatsRequested is number &&
          entry.seatsRequested > 0 &&
          entry.status is string &&
          isReservationStatus(entry.status) &&
          entry.createdAt is timestamp &&
          entry.updatedAt is timestamp &&
          entry.rideSnapshot is map &&
          entry.rideSnapshot.depart is string &&
          entry.rideSnapshot.destination is string &&
          (entry.rideSnapshot.departureAt is number || entry.rideSnapshot.departureAt is timestamp) &&
          entry.rideSnapshot.price is number;
      }

      function canPassengerCreateReservation() {
        if (request.auth == null) {
          return false;
        }
        if (!(request.resource.data.reservations is map)) {
          return false;
        }
        if (request.resource.data.publies != resource.data.publies) {
          return false;
        }
        let diff = request.resource.data.reservations.diff(existingReservations());
        if (diff.removedKeys().size() > 0 || diff.changedKeys().size() > 0) {
          return false;
        }
        let addedKeys = diff.addedKeys();
        if (addedKeys.size() != 1) {
          return false;
        }
        if (!isReservationOnlyDiff()) {
          return false;
        }
        let reservationKey = addedKeys[0];
        let entry = request.resource.data.reservations[reservationKey];
        if (!isReservationEntry(entry, reservationKey)) {
          return false;
        }
        return entry.passengerUid == request.auth.uid && entry.driverUid == trajetId;
      }

      allow read: if isSignedIn();
      allow create: if isSignedIn() && (canManageUserJournal() || isTripOwner());
      allow update: if isSignedIn() &&
        (canManageUserJournal() || isTripOwner() || canPassengerCreateReservation());
      allow delete: if isSignedIn() && (canManageUserJournal() || isTripOwner());

      match /requests/{requestId} {
        allow read: if isSignedIn() && (
          (resource != null && resource.data.passengerUid == request.auth.uid) ||
          (resource != null && resource.data.driverUid == request.auth.uid) ||
          isTripOwner()
        );
        allow create: if isSignedIn() &&
          request.resource.data.passengerUid == request.auth.uid &&
          request.resource.data.seatsRequested is number;
        allow update: if isSignedIn() &&
          (
            isTripOwner() ||
            (resource != null && resource.data.passengerUid == request.auth.uid)
          );
        allow delete: if isSignedIn() &&
          resource != null &&
          resource.data.passengerUid == request.auth.uid;
      }

      match /history/{eventId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() &&
          (isTripOwner() || request.resource.data.actorUid == request.auth.uid);
      }
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
